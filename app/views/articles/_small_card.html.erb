<div class="col-xs-12 col-sm-2 colcard" data-color="<%= article.article_color %>">
  <div class="image-container">
    <div class="image-card">
      <div class="image-photo">
        <%= cl_image_tag article.photo, class:"image-photo-picture" %>
        <%= link_to article_path(article) do %>
          <div class="description" style= "background: <%= article.article_color %>">
            <%= simple_format(article.description) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
