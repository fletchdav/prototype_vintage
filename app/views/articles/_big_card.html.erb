<div class="image-card">
  <%= cl_image_tag article.photo, width: 1400, crop: :scale, class:"big-screen" %>
  <p> <%= article.description %> </p>
  <% if policy(article).edit? %>
    <%=  link_to "effacer", list_article_path(@list, article), method: :delete, data: { confirm: "for sure ?" }  %>
    <%= render 'shared/new_article_form', list:@list, article: article %>
  <% end %>
</div>
