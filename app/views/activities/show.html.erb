<div class="container">
  <div class="elements">
  <% @elements.each do |element| %>
    <% if element.display == 'titre' %>
      <h2> <%= element.content %> </h2>
    <% elsif element.display == 'sous-titre' %>
      <h3> <%= element.content %> </h3>
    <% elsif element.display == 'paragraphe' %>
      <p> <%= simple_format(element.content) %> </p>
     <% elsif element.display == 'photo' %>
      <%= cl_image_tag element.photo, class:"big-screen" %>
    <% end %>
  <% end %>
  </div>
  <div class="new_element">
    <%= render 'elements/new', activity: @activity, element: @element %>
  </div>
